<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAccountActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_color_start"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/img_user"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"/>
    <ImageView
        android:layout_width="21dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/img_user"
        app:layout_constraintStart_toEndOf="@id/img_user"
        android:src="@drawable/camera"
        android:layout_marginTop="139dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/mr_leo"
        android:layout_marginTop="167dp"
        android:textSize="20dp"/>
    <EditText
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:drawableStart="@drawable/ic_barscode"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="243dp"
        android:background="@drawable/edt_shape"
        android:text="@string/_01234567"/>
    <EditText
        android:text="@string/mr_leo"
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:drawableStart="@drawable/ic_barscode"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="304dp"
        android:background="@drawable/edt_shape"/>
    <EditText
        android:text="@string/leon11"
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:drawableStart="@drawable/ic_barscode"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="365dp"
        android:background="@drawable/edt_shape"/>
    <EditText
        android:text="@string/mrleo_gmail_com"
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:drawableStart="@drawable/ic_barscode"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="424dp"
        android:background="@drawable/edt_shape"/>
    <Button
        android:layout_width="328dp"
        android:layout_height="47dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/btn_shape"
        android:textColor="@color/white"
        android:text="@string/submit"
        android:layout_marginTop="500dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>