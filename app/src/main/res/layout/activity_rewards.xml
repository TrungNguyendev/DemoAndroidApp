<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RewardsActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_color_start"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/ll_rewards1"
        android:gravity="center"
        android:background="@color/color_line"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_weight="2"
            android:layout_marginEnd="21dp"
            android:layout_marginStart="21dp"
            android:layout_width="0dp"
            android:layout_height="37dp">
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/browse"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_line"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/my_rewards"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_rewards1" />
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ll_rewards2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="@string/membership_tier_sliver"/>
        <ImageView
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coins"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2300"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>