<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otp_password_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPResetPasswordActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_otp_password"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/btn_color_start"
        app:title="Reset Password"
        app:titleTextColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/you_are_resetting_your_password_n_please_enter_otp_code_we_sent_to_your_sms"
        android:gravity="center"/>
    <EditText
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:id="@+id/edt_otp1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="287dp"
        android:layout_marginStart="73dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edt_otp2"
        android:background="@drawable/edt_shape"/>
    <EditText
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:id="@+id/edt_otp2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="287dp"
        app:layout_constraintStart_toEndOf="@+id/edt_otp1"
        app:layout_constraintEnd_toStartOf="@+id/edt_otp3"
        android:background="@drawable/edt_shape"/>
    <EditText
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:id="@+id/edt_otp3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="287dp"
        app:layout_constraintStart_toEndOf="@id/edt_otp2"
        app:layout_constraintEnd_toStartOf="@id/edt_otp4"
        android:background="@drawable/edt_shape"/>
    <EditText
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:id="@+id/edt_otp4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="287dp"
        android:layout_marginEnd="73dp"
        app:layout_constraintStart_toEndOf="@id/edt_otp3"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edt_shape" />
    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:id="@+id/btn_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="406dp"
        android:background="@drawable/btn_shape"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="14sp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="473dp"
        android:background="@drawable/btn_shape"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:text="@string/resend"/>
</androidx.constraintlayout.widget.ConstraintLayout>