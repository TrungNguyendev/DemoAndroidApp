<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="155dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        android:src="@drawable/ollo"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="191dp"
        android:text="@string/login"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:id="@+id/edt_user_name_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="247dp"
        android:hint="@string/user_name"
        android:background="@drawable/edt_shape"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/edt_password_login"
        android:layout_width="300dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="297dp"
        android:hint="@string/password"
        android:paddingStart="10dp"
        android:background="@drawable/edt_shape_shadow"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tw_forgot_password"
        android:text="@string/forgot_password"
        android:textColor="@color/text_color"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/edt_password_login"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="347dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="301dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="382dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/btn_shape"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tw_register_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="437dp"
        android:text="@string/don_t_have_an_account_register"
        android:textStyle="normal"
        android:textColor="@color/text_color"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="469dp"
        android:text="@string/or_n_login_register"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:textStyle="normal"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/img_google"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_facebook"
        android:layout_marginTop="532dp"
        android:layout_marginStart="83dp"
        android:src="@drawable/ic_google"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/img_facebook"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_google"
        app:layout_constraintEnd_toStartOf="@+id/img_instagram"
        android:layout_marginTop="532dp"
        android:layout_marginStart="83dp"
        android:src="@drawable/ic_facebook"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/img_instagram"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_facebook"
        android:layout_marginTop="532dp"
        android:layout_marginStart="83dp"
        android:src="@drawable/ic_instagram"/>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="648dp"
        android:src="@color/text_color"
        app:layout_constraintEnd_toStartOf="@+id/img2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="648dp"
        android:layout_marginStart="35dp"
        android:src="@color/text_color"
        app:layout_constraintEnd_toStartOf="@+id/img3"
        app:layout_constraintStart_toEndOf="@+id/img1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="651dp"
        android:src="@color/text_color"
        app:layout_constraintStart_toEndOf="@+id/img2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>