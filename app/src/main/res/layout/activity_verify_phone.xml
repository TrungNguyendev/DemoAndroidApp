<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyPhoneActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="155dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:src="@drawable/ollo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="223dp"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:text="@string/verify_number"
        android:textStyle="normal"/>
    <EditText
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:id="@+id/edt_number1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="287dp"
        android:layout_marginStart="73dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edt_number2"
        android:background="@drawable/edt_shape"/>
    <EditText
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:id="@+id/edt_number2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="287dp"
        app:layout_constraintStart_toEndOf="@+id/edt_number1"
        app:layout_constraintEnd_toStartOf="@+id/edt_number3"
        android:background="@drawable/edt_shape"/>
    <EditText
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:id="@+id/edt_number3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="287dp"
        app:layout_constraintStart_toEndOf="@id/edt_number2"
        app:layout_constraintEnd_toStartOf="@id/edt_number4"
        android:background="@drawable/edt_shape"/>
    <EditText
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:id="@+id/edt_number4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="287dp"
        android:layout_marginEnd="73dp"
        app:layout_constraintStart_toEndOf="@id/edt_number3"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edt_shape" />

    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="406dp"
        android:background="@drawable/btn_shape"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="14sp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="473dp"
        android:background="@drawable/btn_shape"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:text="@string/resend"/>

    <ImageView
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/ollo_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>