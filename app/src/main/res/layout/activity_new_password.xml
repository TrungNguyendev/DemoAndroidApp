<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_password_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPasswordActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_new_password"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/btn_color_start"
        app:title="Reset Password"
        app:titleTextColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="77dp"
        android:text="@string/enter_new_password"
        app:layout_constraintStart_toStartOf="@+id/edt_new_password"
        android:textStyle="normal"
        android:textSize="14sp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/edt_new_password"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="111dp"
        android:background="@drawable/edt_shape"
        android:drawableStart="@drawable/ic_key"
        android:hint="@string/password"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/edt_conform_password"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="168dp"
        android:background="@drawable/edt_shape"
        android:drawableStart="@drawable/ic_padlock"
        android:hint="@string/conform_password"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:id="@+id/btn_ok_new_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        android:background="@drawable/btn_shape"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="14sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>